<% if notice %>
  <div class="flash notice">
    <%= notice %>
    <button type="button">
      <%= image_tag 'close-notice.svg' %>
    </button>
  </div>
<% end %>

<% if alert %>
  <div class="flash alert">
    <%= alert %>
    <button type="button">
      <%= image_tag 'close-alert.svg' %>
    </button>
  </div>
<% end %>