<header>
  <% if request.fullpath == root_path %>
    <%= image_tag 'logo-light.svg', class: 'logo' %>
  <% else %>
    <a href="<%= root_path %>" class="logo-link">
      <%= image_tag 'logo-light.svg', class: 'logo' %>
    </a>
  <% end %>
  
  <%= render 'shared/nav'%>
  
  <% if current_user %>
    <%= render 'shared/user_menu' %>
  <% else %>
    <%= render 'shared/login-register' %>
  <% end %>
  
  <div class="hamburger">
    <div class="line"></div>
    <div class="line"></div>
    <div class="line"></div>
  </div>
</header>